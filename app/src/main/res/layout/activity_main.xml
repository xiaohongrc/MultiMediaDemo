<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hongenit.multimediademo.MainActivity">


    <Button
        android:id="@+id/bt_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="camera"
        app:layout_constraintTop_toBottomOf="@+id/bt_player" />


    <Button
        android:id="@+id/bt_surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surface view"
        app:layout_constraintTop_toBottomOf="@+id/bt_camera" />

    <Button
        android:id="@+id/bt_sound_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sound record"
        app:layout_constraintTop_toBottomOf="@+id/bt_surface" />

    <Button
        android:id="@+id/bt_image_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image filter"
        app:layout_constraintTop_toBottomOf="@+id/bt_sound_record" />



</android.support.constraint.ConstraintLayout>
